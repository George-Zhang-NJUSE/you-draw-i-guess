{
  "extends": [
    "tslint:recommended",
    "tslint-react",
    "tslint-config-prettier"
  ],
  "linterOptions": {
    "exclude": [
      "config/**/*.js",
      "node_modules/**/*.ts"
    ]
  },
  "rules": {
    "object-literal-sort-keys": false,
    "interface-over-type-literal": false,
    "semicolon": [
      true,
      "always"
    ],
    "jsx-boolean-value": false,
    "ordered-imports": false,
    "member-access": false,
    "quotemark": [
      true,
      "single",
      "jsx-double"
    ]
  }
}